---
import Badge from '@/components/Badge.astro';
import SocialPill from '@/components/SocialPill.astro';

import LinkedInIcon from '@/icons/LinkedInIcon.astro';
import MailIcon from '@/icons/MailIcon.astro';
---

<div class='max-w-xl'>
  <div class='flex gap-4 mb-4'>
    <img class='rounded-full object-cover shadow-lg size-16' src='/me.webp' alt='Larry Finol' />
    <a
      href='https://linkedin.com/in/larrysfinolb'
      target='_blank'
      rel='noopener'
      class='flex items-center transition md:justify-center md:hover:scale-105'
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1 class='text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white'>Hola, soy Larry Finol</h1>
  <p
    class='mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300'
  >
    Full-Stack Developer. <strong>Ingeniero en Informática, Programador y Desarrollador</strong>. Especializado en la
    creación de aplicaciones escalables y de alto rendimiento.
  </p>
  <nav class='flex flex-wrap gap-4 mt-8'>
    <SocialPill href='mailto:larrysfinolb@gmail.com'>
      <MailIcon class='size-4' />
      Contáctame
    </SocialPill>
    <SocialPill href='https://linkedin.com/in/larrysfinolb'>
      <LinkedInIcon class='size-4' />
      LinkedIn
    </SocialPill>
  </nav>
</div>
